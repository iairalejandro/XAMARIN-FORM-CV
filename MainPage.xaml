<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CVApp.MainPage"
             BackgroundColor="#f4f4f4">
    <ScrollView>
        <StackLayout BackgroundColor="White" Padding="20">
            <!-- Cabecera -->
            <StackLayout Orientation="Horizontal" BackgroundColor="#333" Padding="20">
                <Frame WidthRequest="100" HeightRequest="100" CornerRadius="50" BackgroundColor="White" HasShadow="False">
                    <Image Source="profile.jpg" Aspect="AspectFill" />
                </Frame>
                <StackLayout Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                    <Label Text="José Martínez" FontSize="24" TextColor="#ccc" HorizontalTextAlignment="Center" />
                    <Label Text="Puesto ocupado / Buscado" FontSize="18" TextColor="#8f8f8f" HorizontalTextAlignment="Center" />
                </StackLayout>
            </StackLayout>

            <!-- Contenido -->
            <StackLayout Orientation="Horizontal" Spacing="20" Margin="0,20">
                <!-- Barra lateral -->
                <StackLayout WidthRequest="150" BackgroundColor="#ececec" Padding="10">
                    <Label Text="Contacto" FontSize="18" TextColor="#333" />
                    <Label Text="📞 999 999 999" FontSize="14" TextColor="#333" />
                    <Label Text="📧 jose.martinez@gmail.com" FontSize="14" TextColor="#333" />
                    <Label Text="📍 México DF" FontSize="14" TextColor="#333" />
                    <Label Text="linkedln.com/jose-martinez" FontSize="14" TextColor="#333" />

                    <Label Text="Idiomas" FontSize="18" TextColor="#333" Margin="0,20,0,0" />
                    <Label Text="Español: Nativo" FontSize="14" TextColor="#333" />
                    <Label Text="Inglés: Bilingüe (TOEIC 950)" FontSize="14" TextColor="#333" />
                    <Label Text="Francés: Intermedio (B2)" FontSize="14" TextColor="#333" />

                    <Label Text="Aptitudes" FontSize="18" TextColor="#333" Margin="0,20,0,0" />
                    <Label Text="• Inteligencia emocional" FontSize="14" TextColor="#333" />
                    <Label Text="• Espíritu crítico" FontSize="14" TextColor="#333" />
                    <Label Text="• Trabajo en equipo" FontSize="14" TextColor="#333" />
                    <Label Text="• Capacidad analítica" FontSize="14" TextColor="#333" />
                    <Label Text="• Habilidades físicas" FontSize="14" TextColor="#333" />
                </StackLayout>

                <!-- Contenido principal -->
                <StackLayout HorizontalOptions="FillAndExpand">
                    <Label Text="Perfil" FontSize="20" TextColor="#333" />
                    <Label Text="Trabajador Social con 4 años de experiencia en proyectos colectivos. Mi objetivo es lograr que los jóvenes obtengan acceso a la educación superior mediante logros deportivos."
                           FontSize="14" TextColor="#666" />

                    <Label Text="Experiencia Laboral" FontSize="20" TextColor="#333" Margin="0,20,0,10" />
                    <StackLayout>
                        <Label Text="Trabajador Social" FontSize="16" TextColor="#130a0a" />
                        <Label Text="México DF, 2022 – Actualmente" FontSize="14" TextColor="#221d1d" />
                        <Label Text="• Coordinador y mediador entre equipos de ayuda psicológica." FontSize="14" TextColor="#444" />
                        <Label Text="• Velar por la salud mental del equipo y miembros." FontSize="14" TextColor="#444" />
                    </StackLayout>

                    <Label Text="Formación" FontSize="20" TextColor="#333" Margin="0,20,0,10" />
                    <Label Text="Grado de Trabajo Social" FontSize="16" TextColor="#130a0a" />
                    <Label Text="ESMA, Madrid (2012 – 2015)" FontSize="14" TextColor="#444" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
